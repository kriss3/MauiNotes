<?xml version="1.0" encoding="UTF-8" ?>
<Shell
	x:Class="MauiNotes.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiNotes.App"
    xmlns:pages="clr-namespace:MauiNotes.App.Pages">

	<FlyoutItem Title="Home" Route="home">
	    <ShellContent
			Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}" />
	</FlyoutItem>

	<FlyoutItem Title="Counter" Route="counter">
		<ShellContent
            Title="Counter"
            ContentTemplate="{DataTemplate pages:CounterPage}"/>
	</FlyoutItem>


</Shell>
